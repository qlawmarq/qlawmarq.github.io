{
  "name": "svelte-portfolio",
  "description": "An example of a portfolio site created with Svelte",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://qlawmarq.github.io",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/qlawmarq/qlawmarq.github.io.git"
  },
  "author": "Masaki Yoshiiwa <masaki.yoshiiwa@gmail> (https://github.com/qlawmarq/)",
  "engines": {
    "node": "v22"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "e2e:test": "playwright test",
    "e2e:update": "playwright test -u",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin prettier-plugin-svelte --check . && eslint --fix ./src",
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "typesafe-i18n": "typesafe-i18n"
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^5.2.6",
    "@neoconfetti/svelte": "^2.2.2",
    "@playwright/test": "^1.55.0",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-static": "^3.0.9",
    "@sveltejs/kit": "^2.43.6",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@types/cookie": "^1.0.0",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.46.1",
    "fast-xml-parser": "^5.3.0",
    "fs": "0.0.1-security",
    "isbot": "^3.8.0",
    "path": "^0.12.7",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "svelte": "^4.2.20",
    "svelte-check": "^4.3.1",
    "tslib": "^2.8.1",
    "typesafe-i18n": "^5.26.2",
    "typescript": "^5.8.2",
    "vite": "^5.4.14"
  },
  "type": "module"
}
