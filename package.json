    "svelte": "^5.48.5",
    "svelte-check": "^4.3.5",
    "tslib": "^2.8.1",
    "typesafe-i18n": "^5.26.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1"
  },
  "type": "module",
  "dependencies": {
    "isomorphic-dompurify": "^2.35.0",
    "marked": "^17.0.1"
  }
