{
  "name": "svelte-portfolio",
  "description": "An example of a portfolio site created with Svelte",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://qlawmarq.github.io",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/qlawmarq/qlawmarq.github.io.git"
  },
  "author": "Masaki Yoshiiwa <masaki.yoshiiwa@gmail> (https://github.com/qlawmarq/)",
  "engines": {
    "node": "v24"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "e2e:test": "playwright test",
    "e2e:update": "playwright test -u",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin prettier-plugin-svelte --check . && eslint --fix ./src",
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "typesafe-i18n": "typesafe-i18n"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@fontsource/fira-mono": "^5.2.7",
